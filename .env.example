LOG_LEVEL=info

# Download Configuration
DEFAULT_DOWNLOAD_PATH=./downloads
MAX_FILE_SIZE_MB=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10